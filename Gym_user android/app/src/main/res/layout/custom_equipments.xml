                        android:textColor="#fff"
                        />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="#fff"
                        android:text="--------------------------------------------------------------------" />

</LinearLayout>